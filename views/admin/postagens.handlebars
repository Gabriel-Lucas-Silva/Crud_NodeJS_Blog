<h2>Lista de Postagens</h2>
<hr class="mb-3">

{{#each postagens}}
    <div class="card mb-2">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <h6>{{descricao}}</h6>
            <p>{{conteudo}}</p>
            <small class="mt-6">Categoria: {{categoria.nome}}</small><br>
            <small>Slug: {{slug}}</small><br>
            <small>Criado em {{data}}</small><br><br>
            
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-warning">Editar</button></a>
            <form method="POST" action="/admin/postagens/del" class="mt-2">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
        </div>
    </div>


{{else}}
    <h4 class="mt-3">Nenhuma Postagem Registrada</h4>
{{/each}}

<a href="/admin/postagens/add"><button class="btn btn-success mt-3 mb-3">Nova Postagem</button></a>