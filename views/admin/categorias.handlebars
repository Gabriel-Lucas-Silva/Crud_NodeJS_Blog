<h2>Lista de Categorias</h2>
<hr class="mb-3">

{{#each categorias}}
    <div class="card mb-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning">Editar</button></a>
            <form method="POST" action="/admin/categorias/del" class="mt-2">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
        </div>
    </div>


{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}

<a href="/admin/categorias/add"><button class="btn btn-success mt-3 mb-3">Nova Categoria</button></a>
